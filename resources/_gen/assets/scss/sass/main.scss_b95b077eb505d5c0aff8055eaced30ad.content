@use 'colors';nav ul{list-style:none;display:flex;align-items:center;font-family:Raleway;padding-left:0}nav ul li:first-child{flex-grow:1}nav ul li:not(:first-child){margin-left:1em;background-image:linear-gradient(transparent 60%,var(--hover) 60%);background-repeat:no-repeat;background-size:0;transition:all .6s}nav ul li:not(:first-child):hover{background-size:100%}nav ul li a{text-decoration:none;font-weight:700;color:var(--fg)}nav ul li a:visited{color:var(--fg-alt)}:root{--nord-0: #2e3440;--nord-1: #3b4252;--nord-2: #434c5e;--nord-3: #4c566a;--nord-4: #d8dee9;--nord-5: #e5e9f0;--nord-6: #eceff4;--nord-7: #8fbcbb;--nord-8: #88c0d0;--nord-9: #81a1c1;--nord-10: #5e81ac;--nord-11: #bf616a;--nord-12: #d08770;--nord-13: #ebcb8b;--nord-14: #a3be8c;--nord-15: #b48ead;--bg: var(--nord-6);--fg: var(--nord-0);--fg-alt: var(--nord-0);--link: var(--nord-8);--hover: var(--nord-15)}body{background:var(--bg);color:var(--fg);font-family:IBM Plex Sans Condensed;margin:2em auto;width:80%}